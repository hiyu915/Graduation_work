<div class="container my-5">
  <h2 class="mb-4 fw-bold text-center"><%= t('account_info_page.title') %></h2>

  <ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <strong><%= t('account_info_page.email') %></strong><br>
        <small class="text-muted"><%= current_user.email %></small>
      </div>
      <%= link_to '>', edit_email_users_path, class: 'btn btn-outline-secondary' %>
    </li>

    <li class="list-group-item d-flex justify-content-between align-items-center">
      <strong><%= t('account_info_page.password_change') %></strong>
      <%= link_to '>', new_password_reset_path, class: 'btn btn-outline-secondary' %>
    </li>

    <li class="list-group-item d-flex justify-content-between align-items-center">
      <strong><%= t('account_info_page.withdrawal') %></strong>
      <%= link_to '>', '#', class: 'btn btn-outline-danger', data: { turbo_confirm: t('account_info_page.withdrawal_confirm') } %>
    </li>
  </ul>
</div>
