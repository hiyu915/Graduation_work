<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">

      <h1 class="mb-4"><%= t("accounts.show.title") %></h1>

      <p><%= t("accounts.show.message") %></p>

      <div class="d-flex justify-content-center gap-3 mt-4 mb-5">
        <%= button_to t("accounts.show.confirm_button"), account_path,
              method: :delete,
              data: { confirm: t("account_info_page.withdrawal_confirm") },
              class: "btn btn-danger" %>

        <%= link_to t("accounts.show.cancel_button"), account_info_users_path, class: "btn btn-secondary" %>
      </div>

    </div>
  </div>
</div>
