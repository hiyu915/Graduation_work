<header class="bg-dark px-4 py-4">
  <div class="d-flex align-items-center justify-content-between">
    <div class="flex-shrink-0">
      <h1 class="h4 fw-bold m-0">
        <%= link_to t('header.logo'), root_path, class: 'text-white text-decoration-none' %>
      </h1>
    </div>

    <div class="text-center flex-grow-1">
      <%= link_to t('header.ranking'), rankings_regional_path, class: 'text-warning fw-semibold text-decoration-none' %>
