<% content_for(:title, t('.title')) %>

<div class="container my-4">

  <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <h1 class="mb-2 mb-md-0"><%= t('posts.index.title') %></h1>
    <div>
      <%= link_to t('posts.index.new_post'), new_post_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <%= search_form_for @q, url: posts_path, method: :get, html: { class: "row g-3", id: "search-form" } do |f| %>

        <!-- 店名 -->
        <div class="col-12 col-md-3">
          <%= f.label :shop_name_cont, t('helpers.label.post.shop_name'), class: "form-label fw-bold" %>
          <div data-controller="autocomplete" data-autocomplete-url-value="<%= autocomplete_posts_path %>" role="combobox">
            <%= f.search_field :shop_name_cont, data: { autocomplete_target: 'input' }, class: "form-control" %>
            <%= f.hidden_field :shop_name, data: { autocomplete_target: 'hidden' } %>
            <ul class="list-group" data-autocomplete-target="results"></ul>
          </div>
        </div>

        <!-- 訪問日 -->
        <div class="col-6 col-md-2">
          <%= f.label :visit_date_gteq, t('posts.index.search.start_date'), class: "form-label fw-bold" %>
          <%= f.date_field :visit_date_gteq, class: "form-control" %>
        </div>

        <div class="col-6 col-md-2">
          <%= f.label :visit_date_lteq, t('posts.index.search.end_date'), class: "form-label fw-bold" %>
          <%= f.date_field :visit_date_lteq, class: "form-control" %>
        </div>

        <!-- 都道府県・市 -->
        <div class="col-6 col-md-2">
          <%= f.label :shop_location_prefecture_id_eq, t('helpers.label.post.prefecture'), class: "form-label fw-bold" %>
          <%= f.collection_select :shop_location_prefecture_id_eq, Prefecture.all, :id, :name,
                { include_blank: t('posts.index.search.all') },
                { class: "form-select", id: "search-prefecture-select" } %>
        </div>

        <div class="col-6 col-md-2">
          <%= f.label :shop_location_id_eq, t('helpers.label.post.city'), class: "form-label fw-bold" %>
          <%= f.select :shop_location_id_eq, [],
                { include_blank: t('posts.index.search.all') },
                { class: "form-select", id: "search-city-select" } %>
        </div>

        <!-- カテゴリ・同行者・気分・来店理由 -->
        <div class="col-6 col-md-2">
          <%= f.label :category_id_eq, t('helpers.label.post.category'), class: "form-label fw-bold" %>
          <%= f.collection_select :category_id_eq, Category.all, :id, :name,
                { include_blank: t('posts.index.search.all') },
                class: "form-select" %>
        </div>

        <div class="col-6 col-md-2">
          <%= f.label :companion_id_eq, t('helpers.label.post.companion'), class: "form-label fw-bold" %>
          <%= f.collection_select :companion_id_eq, Companion.all, :id, :name,
                { include_blank: t('posts.index.search.all') },
                class: "form-select" %>
        </div>

        <div class="col-6 col-md-2">
          <%= f.label :feeling_id_eq, t('helpers.label.post.feeling'), class: "form-label fw-bold" %>
          <%= f.collection_select :feeling_id_eq, Feeling.all, :id, :name,
                { include_blank: t('posts.index.search.all') },
                class: "form-select" %>
        </div>

        <div class="col-6 col-md-2">
          <%= f.label :visit_reason_id_eq, t('helpers.label.post.visit_reason'), class: "form-label fw-bold" %>
          <%= f.collection_select :visit_reason_id_eq, VisitReason.all, :id, :name,
                { include_blank: t('posts.index.search.all') },
                class: "form-select" %>
        </div>

        <!-- 検索ボタン・リセットボタン -->
        <div class="col-12 col-md-2 d-flex gap-2 align-items-end">
          <%= f.submit t('posts.index.search.submit'), class: "btn btn-primary w-100" %>

          <button type="button" class="btn btn-secondary w-100" onclick="resetSearchForm()">
            <%= t('posts.index.search.reset') %>
          </button>
        </div>

        <!-- Twitter シェアリンク -->
        <%= link_to "https://twitter.com/intent/tweet?text=#{URI.encode_www_form_component('一緒にリピログを使おう')}&url=#{URI.encode_www_form_component(root_url)}", target: "_blank", rel: "noopener" do %>
          <%= image_tag "chara.png", alt: "マイマップアイコン", size: "150x150",
                        class: "position-absolute",
                        style: "bottom: -20px; right: 0; z-index: 10; transform: translateX(100px);" %>
        <% end %>

      <% end %>
    </div>
  </div>

  <!-- マップ・カレンダーリンク -->
  <div class="d-flex justify-content-end mb-3 gap-2 flex-wrap">
    <%= link_to t("maps.title"), map_posts_path,
          class: "btn btn-success", data: { turbo: false } %>
    <%= link_to t('posts.calendar.title'), calendar_posts_path,
          class: "btn btn-info", data: { turbo: false } %>
  </div>

  <turbo-frame id="posts">
    <%= render partial: "posts_table", locals: { posts: @posts, visits_by_shop: @visits_by_shop } %>
  </turbo-frame>
</div>

<script>
  // 都道府県変更時に市を更新
  function handleSearchPrefectureChange() {
    const prefectureSelect = document.getElementById('search-prefecture-select');
    const citySelect = document.getElementById('search-city-select');
    if (!prefectureSelect || !citySelect) return;

    citySelect.innerHTML = '<option value="">' + '<%= j t("posts.index.search.all") %>' + '</option>';

    const prefectureId = prefectureSelect.value;
    if (!prefectureId) return;

    fetch(`/posts/cities.json?prefecture_id=${encodeURIComponent(prefectureId)}`)
      .then(response => response.json())
      .then(json => {
        const cities = json.data;
        cities.forEach(city => {
          const option = document.createElement('option');
          option.value = city.id;
          option.textContent = city.name;
          citySelect.appendChild(option);
        });
      })
      .catch(error => console.error("<%= j t('posts.index.error.fetch_cities') %>", error));
  }

  // 選択項目リセット（検索ボタンの文字を消さない）
  function resetSearchForm() {
    const form = document.getElementById('search-form');
    if (!form) return;

    form.querySelectorAll('input, select').forEach(el => {
      if (el.tagName === 'SELECT') {
        el.selectedIndex = 0;
      } else if (el.type !== 'submit' && el.type !== 'button') {
        el.value = '';
      }
    });

    // 都道府県→市の市を空に戻す
    const citySelect = document.getElementById('search-city-select');
    if (citySelect) {
      citySelect.innerHTML = '<option value="">' + '<%= j t("posts.index.search.all") %>' + '</option>';
    }
  }

  document.addEventListener('turbo:load', () => {
    const searchPrefectureSelect = document.getElementById('search-prefecture-select');
    if (searchPrefectureSelect && !searchPrefectureSelect.dataset.listenerAttached) {
      searchPrefectureSelect.addEventListener('change', handleSearchPrefectureChange);
      searchPrefectureSelect.dataset.listenerAttached = 'true';
    }
  });
</script>
