<div class="container my-5">
  <h1 class="mb-4 text-center"><%= t('help_cards.news.title') %></h1>

  <% news_items = [
    { date: "", content: "今後のお知らせをここに追加予定です。" },
    { date: "2025年10月03日", content: "使い方ページのデザインを一新しました。" },
    { date: "2025年9月26日", content: "よくある質問ページを公開しました。" },
    { date: "2025年9月26日", content: "ヘルプページを公開しました。" },
  ] %>

  <% paginated_news = Kaminari.paginate_array(news_items).page(params[:page]).per(10) %>

  <div class="card shadow-sm mb-4">
    <div class="card-body p-0">
      <table class="table table-bordered mb-0">
        <thead class="table-light">
          <tr>
            <th class="text-center" style="width: 150px;"><%= t('news_table.date') %></th>
            <th><%= t('news_table.content') %></th>
          </tr>
        </thead>
        <tbody>
          <% paginated_news.each do |news| %>
            <tr>
              <td class="text-center"><strong><%= news[:date] %></strong></td>
              <td><%= news[:content] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-end mb-3">
    <%= link_to t('help_cards.back'), help_path, class: "btn btn-primary" %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate paginated_news, theme: 'bootstrap-5' %>
  </div>
</div>
