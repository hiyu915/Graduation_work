<div class="my-5"></div> <!-- 上余白 -->
<h1 class="mb-5 text-center display-5 fw-bold text-dark"><%= t('ranking.title') %></h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% ranking_items = [
    { title: t('ranking.top_shop'), value: @top_shop&.first, count: @top_shop&.last },
    { title: t('ranking.top_month'), value: @top_month&.first&.strftime("%Y年%m月"), count: @top_month&.last },
    { title: t('ranking.top_region'), value: @top_region&.dig(:region), count: @top_region&.dig(:count) },
    { title: t('ranking.top_category'), value: @top_category&.first, count: @top_category&.last },
    { title: t('ranking.top_companion'), value: @top_companion&.first, count: @top_companion&.last },
    { title: t('ranking.top_feeling'), value: @top_feeling&.first, count: @top_feeling&.last },
    { title: t('ranking.top_visit_reason'), value: @top_visit_reason&.first, count: @top_visit_reason&.last }
  ] %>

  <% ranking_items.each do |item| %>
    <div class="col">
      <div class="card h-100 shadow-sm border border-1 border-secondary text-center">
        <div class="card-body">
          <h5 class="card-title fw-semibold mb-3 text-primary"><%= item[:title] %></h5>
          <p class="card-text fs-5 mb-3"><%= item[:value] || t('ranking.none') %></p>
          <span class="badge bg-danger text-white fs-6 px-3 py-2">
            <i class="bi bi-heart-fill me-1"></i> <%= t('ranking.times', count: item[:count] || 0) %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="my-5"></div>